        <gradient
            android:startColor="#FF4081"
            android:endColor="#673AB7"
            android:angle="45" />
        <corners android:radius="10dp" />
    </shape>
</item>
<item android:left="4dp" android:right="0dp" android:top="4dp" android:bottom="4dp">
