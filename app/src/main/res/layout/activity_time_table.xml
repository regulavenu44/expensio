<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TimeTable">

    <!-- First Row of Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/shiny_folding_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/week1img"
                android:layout_width="88dp"
                android:layout_height="83dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="0dp"
                android:padding="4dp"
                android:src="@drawable/arun" />

            <TextView
                android:id="@+id/week1name"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Arun"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/day1"
                android:layout_width="122dp"
                android:layout_height="47dp"
                android:layout_below="@id/week1name"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="-58dp"
                android:layout_marginBottom="15dp"
                android:layout_toStartOf="@+id/week1img"
                android:text="Monday"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <!-- Box 2 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/shiny_folding_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/week2img"
                android:layout_width="88dp"
                android:layout_height="83dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="0dp"
                android:padding="4dp"
                android:src="@drawable/chary" />

            <TextView
                android:id="@+id/week2name"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Chary"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="154dp"
                android:layout_height="55dp"
                android:layout_below="@id/week2name"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="-70dp"
                android:layout_marginBottom="9dp"
                android:layout_toStartOf="@+id/week2img"
                android:text="Tuesday"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </RelativeLayout>

        <!-- Add more boxes (Box 3 to Box 7) similarly -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Box 2 -->
        <RelativeLayout
            android:layout_width="0dp"
