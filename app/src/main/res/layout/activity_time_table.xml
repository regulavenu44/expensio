        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/shiny_folding_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/week4img"
